<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.av.readinlangs.App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ReadLangs"
        tools:targetApi="31">
        <activity
            android:name=".ui.CreateTabActivity"
            android:exported="false"
            android:label="@string/title_activity_create_tab"
            android:theme="@style/Theme.ReadLangs" />
        <activity
            android:name=".ui.TabListActivity"
            android:exported="false"
            android:label="@string/title_activity_tab_list"
            android:theme="@style/Theme.ReadLangs" />
        <activity
            android:name=".ui.SettingsActivity"
            android:exported="false"
            android:label="@string/title_activity_settings"
            android:theme="@style/Theme.ReadLangs" />
        <activity
            android:name=".ui.ArchiveReviewActivity"
            android:exported="false"
            android:label="@string/title_activity_archive_review"
            android:theme="@style/Theme.ReadLangs" />
        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.ReadLangs">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.ReadingActivity"
            android:theme="@style/Theme.ReadLangs"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan" />
    </application>

</manifest>